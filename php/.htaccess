Options +FollowSymLinks
RewriteEngine On
RewriteBase /dailygro/

# Auth endpoints
RewriteRule ^api/login$ login.php [L]
RewriteRule ^api/logout$ auth/logout.php [L]
RewriteRule ^api/user_registration$ user_registration.php [L]
RewriteRule ^api/categories$ categories.php [L]
RewriteRule ^api/products$ products.php [L]

# User profile endpoints
RewriteRule ^api/users/get_user_profile$ users/get_user_profile.php [L]
RewriteRule ^api/users/user_address$ users/user_address.php [L]
RewriteRule ^api/users/cart$ users/cart.php [L]
RewriteRule ^api/users/order_tracking$ users/order_tracking.php [L]
RewriteRule ^api/users/orders$ users/orders.php [L]
RewriteRule ^api/users/wishlist$ users/wishlist.php [L]
RewriteRule ^api/users/coupons$ users/coupons.php [L]
RewriteRule ^api/users/wallet$ users/wallet.php [L]
RewriteRule ^api/users/wallet_transactions$ users/wallet_transactions.php [L]
RewriteRule ^api/users/wallet_payment$ users/wallet_payment.php [L]
RewriteRule ^api/users/product_detail$ users/product_detail.php [L]